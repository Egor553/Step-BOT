generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  telegramId      BigInt   @unique
  username        String?
  firstName       String?
  lastName        String?
  occupation      String?  // Чем занимается
  phone           String?  // Номер телефона
  notificationTime String @default("20:00") // Время отчета
  birthDate       DateTime? // Дата рождения
  login           String?  @unique // Логин для входа
  password        String?  // Хэш пароля
  verificationCode String? // Код подтверждения
  codeExpiry      DateTime? // Срок действия кода
  isVerified      Boolean  @default(false) // Подтвержден ли аккаунт
  goals           Goal[]
  createdAt       DateTime @default(now())
}

model Goal {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  description String
  category    String?   // "PERSONAL" или "BUSINESS"
  duration    Int       // месяцев
  startDate   DateTime  @default(now())
  deadline    DateTime? // Конкретная дата дедлайна
  status      String    @default("ACTIVE") // ACTIVE, COMPLETED, FAILED
  metric      String?   // Показатель (например, "Выручка")
  steps       Step[]
}

model Step {
  id         Int      @id @default(autoincrement())
  goal       Goal     @relation(fields: [goalId], references: [id])
  goalId     Int
  content    String
  evaluation String   // GREEN (Вперед), RED (Назад)
  value      Float?   // Числовое значение показателя
  isKey      Boolean  @default(false) // Тот самый "Ключевой шаг"
  createdAt  DateTime @default(now())
}

model Request {
  id         Int      @id @default(autoincrement())
  telegramId BigInt
  username   String?
  type       String   // "ЗАПРОС ПОМОЩИ" или "ПРЕДЛОЖЕНИЕ"
  content    String
  createdAt  DateTime @default(now())
}

model Idea {
  id         Int      @id @default(autoincrement())
  telegramId BigInt
  username   String?
  content    String
  createdAt  DateTime @default(now())
}
